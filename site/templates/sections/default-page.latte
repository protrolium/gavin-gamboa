<section id="online-world">
    
    <div class="uk-width-1-1" uk-height-viewport="expand: true" uk-grid>
        {if $page??->featured_image??->first}
            {if $page->enable_featured_image == true}
                <div class="uk-width-2-3@m">
                    <div class="uk-padding uk-padding-remove-bottom uk-animation-fade">
                        <img src="{$page->featured_image->first->url}" alt="{$page->featured_image->first->description}" uk-img>
                    </div>
                </div>
            {/if}
        {/if}

        <div class="uk-width-1-1">
            <div class="uk-width-4-5@m" uk-scrollspy="cls: uk-animation-fade; target: > div; delay: 350; repeat: false;">
                <div class="uk-width-1-1 uk-padding uk-padding-remove-bottom">
                    
                    {* title *}
                    <h1 style="line-height:1em;">{$page->title|noescape}</h1>

                    {* date + tags *}
                    <div 
                        class="uk-padding-small uk-padding-remove-top uk-padding-remove-left uk-text-muted"
                        uk-scrollspy="cls: uk-animation-fade; target: > div; delay: 350; repeat: false;">
                        
                        {* don't show date on about | support pages *}
                        {var $excludePages = ["about", "support"]}
                        {if !in_array($page->name, $excludePages)}  
                            <div class="uk-flex uk-flex-middle">
                                <span class="text-light hover-icon" uk-icon="icon: clock; ratio: 0.8"></span>
                                &nbsp;
                                <span class="uk-text-small">{$page->post_date}</span>
                            </div>
                        {/if}

                        {if $page??->categories}
                            <span class="uk-text-secondary">
                                {foreach $page->categories as $tag}
                                    <span uk-icon="icon: tag; ratio: 0.7"></span>
                                    <a href="{$tag->url}" alt=""><span>{$tag->title}</span></a>    
                                {/foreach}
                            </span>
                        {/if}
                    </div>
                </div>

                <div>
                    <div class="uk-width-1-1 uk-padding uk-padding-remove-top uk-padding-remove-bottom">    
                        {* render the repeater matrix *}
                        {$rockfrontend->render("/sections/includes/repeater-matrix-default.latte")}
                    </div>
                </div>

            </div>

        </div>

        {* gallery *}
        {if $page??->gallery}
            {if $page->gallery->count > 1}
                <div>
                    <div class="uk-padding">
                        {$rockfrontend->render("/sections/includes/gallery.latte")}
                    </div>
                </div>
            {else}
                <div class="uk-width-1-1">
                    {if $page->gallery->count == 1}
                        <div class="uk-width-2-3 uk-margin-xlarge-left uk-margin-bottom uk-visible@m">
                            <img src="{$page->gallery->first->url}" alt="{$page->gallery->first->title}" uk-img>
                        </div>
                    {/if}
                </div>
            {/if}
        {/if}

    </div>
    
</section>

